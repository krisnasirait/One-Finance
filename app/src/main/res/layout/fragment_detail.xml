<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.main.detail.DetailFragment"
    android:background="@drawable/bg_wallet">

   <TextView
       android:id="@+id/tvCoinName"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="BNB/USD"
       android:textColor="@color/white"
       android:textSize="24sp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/ivGraphics"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvCoinName"/>

    <TextView
        android:id="@+id/tvTitleToday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/ivGraphics"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/tvTitleSeven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:text="7 Days"
        app:layout_constraintStart_toEndOf="@id/tvTitleToday"
        app:layout_constraintTop_toBottomOf="@id/ivGraphics"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tvTitleThirty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="30 Days"
        android:layout_marginStart="15dp"
        app:layout_constraintEnd_toStartOf="@id/tvTitleNinety"
        app:layout_constraintStart_toEndOf="@id/tvTitleSeven"
        app:layout_constraintTop_toBottomOf="@id/ivGraphics"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tvTitleNinety"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toStartOf="@id/tvTitleOneYear"
        app:layout_constraintStart_toEndOf="@id/tvTitleThirty"
        app:layout_constraintTop_toBottomOf="@id/ivGraphics"
        android:text="90 Days"
        android:layout_marginStart="15dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tvTitleOneYear"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tvTitleNinety"
        app:layout_constraintEnd_toStartOf="@id/tvTitleAllTime"
        app:layout_constraintTop_toBottomOf="@id/ivGraphics"
        android:layout_marginStart="15dp"
        android:text="1 Year"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tvTitleAllTime"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@id/tvTitleOneYear"
        app:layout_constraintTop_toBottomOf="@id/ivGraphics"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="All Time"
        android:layout_marginEnd="15dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tvToday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-1.76%"
        app:layout_constraintTop_toBottomOf="@id/tvTitleToday"
        app:layout_constraintStart_toStartOf="@id/tvTitleToday"
        android:textColor="@color/red"/>

    <TextView
        android:id="@+id/tvSevenDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTitleSeven"
        app:layout_constraintStart_toStartOf="@id/tvTitleSeven"
        android:text="-1.86%"
        android:textColor="@color/red"/>

    <TextView
        android:id="@+id/tvThirtyDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTitleThirty"
        app:layout_constraintStart_toStartOf="@id/tvTitleThirty"
        android:text="+2.80%"
        android:textColor="@color/lime_green"/>

    <TextView
        android:id="@+id/tvNinety"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+55%"
        app:layout_constraintTop_toBottomOf="@id/tvTitleNinety"
        app:layout_constraintStart_toStartOf="@id/tvTitleNinety"
        android:textColor="@color/lime_green"/>

    <TextView
        android:id="@+id/tvOneYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTitleOneYear"
        app:layout_constraintStart_toStartOf="@id/tvTitleOneYear"
        android:text="+200%"
        android:textColor="@color/lime_green"/>

    <TextView
        android:id="@+id/tvAllTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTitleAllTime"
        app:layout_constraintStart_toStartOf="@id/tvTitleAllTime"
        android:text="+550.20%"
        android:textColor="@color/lime_green"/>

    <Button
        android:id="@+id/btnBuy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        android:elevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvThirtyDays"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Buy"
        android:backgroundTint="@color/dark_green"/>

    <Button
        android:id="@+id/btnSell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnBuy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Sell"
        android:backgroundTint="@color/dark_red"/>



</androidx.constraintlayout.widget.ConstraintLayout>